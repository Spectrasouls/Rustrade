
*, :after, :before
  box-sizing border-box
body
  margin 0
.logo
  text-align: left
  font-size: 50px
  text-transform: uppercase
  color: #FFFF
.login-wrap
  width 100%
  margin auto
  max-width 400px
  min-height 520px
  position relative
  top 100px
  box-shadow 0 12px 15px 0 rgba(0,0,0,.24),0 17px 50px 0 rgba(0,0,0,.19)
  padding 50px 50px 50px 50px
  background #fff

  .component-fade-enter-active, .component-fade-leave-active
    transition opacity .3s ease

  .component-fade-enter, .component-fade-leave-to
    opacity 0

  .sign-in , .sign-up
    display none

  .sign-in:checked + .tab,
  .sign-up:checked + .tab
    border-color #FF5535

  .tab
    display flex
    justify-content center
    width 100%
    font-size 18px
    padding-bottom 5px
    margin 10px 15px 20px 0
    border-bottom 2px solid transparent
    text-transform uppercase
    

  .sign-in-form, .sign-up-form
    top 120px
    left 50px
    right 50px
    position absolute

    .input-group
      margin-bottom 15px

      .label
        text-transform uppercase
        width 100%
        color #fff
        display block
        font-size 12px

      .input
        width 100%
        color default_color
        display block
        border 1px solid  #B5BFB3
        padding 15px 20px
        background #fff

      .input[data-type="password"]
        text-security circle

      .input:focus
        outline none
        border 1px solid primary_color

    button
      text-transform uppercase
      border none
      padding 15px 20px
      width 100%
      color #fff
      display block
      background: #FF5535
      outline none
      cursor pointer
    button:active
      opacity 0.7


    .hr
      height 2px
      margin 10px 0 10px 0
      background default_color

    .footer-link
      text-align center

      a
        color inherit
        text-decoration none
      a:hover
        color primary_color

      label
        cursor pointer
      label:hover
        color primary_color
